{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "jrl_DIR": "${sourceDir}/../jrl/build",
        "roptlib_DIR": "${sourceDir}/../ROPTLIB/build"
      }
    },
    {
      "name": "config-debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build",
      "configurePreset": "default",
      "jobs": 12
    },
    {
      "name": "build-debug",
      "configurePreset": "config-debug",
      "jobs": 12
    }
  ]
}